<p id="notice"><%= notice %></p>

<h1>Books <%= params[:category] %></h1>
<% if @books.count == 0 %></h1>
  <h1>Aún no hay libros disponibles en esta categoría %></h1>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @books.each do |book| %>
        <a href="/books/<%= book.id %>">
          <%= image_tag book.book_img.url(:medium) %>
        </a>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.description %></td>
          <td><%= book.author %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>

<%= link_to 'New Book', new_book_path %>
